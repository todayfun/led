<h1>Listing news</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.title %></td>
    <td><%= news.content %></td>
    <td><%= link_to 'Show', admin_news(news) %></td>
    <td><%= link_to 'Edit', edit_admin_news_path(news) %></td>
    <td><%= link_to 'Destroy', admin_news(news), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

