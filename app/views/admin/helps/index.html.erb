<h1>Listing helps</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @helps.each do |help| %>
  <tr>
    <td><%= help.name %></td>
    <td><%= help.content %></td>
    <td><%= link_to 'Show', admin_help_path(help) %></td>
    <td><%= link_to 'Edit', edit_admin_help_path(help) %></td>
    <td><%= link_to 'Destroy', admin_help_path(help), method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

