<h1>Listing enquiries</h1>

<table>
  <tr>
    <th>User</th>
    <th>Products</th>
    <th>Status</th>
    <th>User name</th>
    <th>User email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @enquiries.each do |enquiry| %>
  <tr>
    <td><%= enquiry.user_id %></td>
    <td><%= enquiry.products %></td>
    <td><%= enquiry.status %></td>
    <td><%= enquiry.user_name %></td>
    <td><%= enquiry.user_email %></td>
    <td><%= link_to 'Show', enquiry %></td>
    <td><%= link_to 'Edit', edit_enquiry_path(enquiry) %></td>
    <td><%= link_to 'Destroy', enquiry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

